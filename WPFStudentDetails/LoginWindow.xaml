<Window x:Class="WPFStudentDetails.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Student Details System" 
        Height="550" 
        Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Student Details System" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Please sign in to continue" 
                          FontSize="12" 
                          Foreground="#bdc3c7" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Login Form -->
        <StackPanel Grid.Row="1" Margin="40,30" VerticalAlignment="Top">
            
            <!-- Username Section -->
            <TextBlock Text="Username" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" 
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     FontSize="14"
                     Padding="10"
                     BorderThickness="2"
                     BorderBrush="#ddd"
                     Background="White"
                     Margin="0,0,0,20"/>
            
            <!-- Password Section -->
            <TextBlock Text="Password" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Height="40"
                        FontSize="14"
                        Padding="10"
                        BorderThickness="2"
                        BorderBrush="#ddd"
                        Background="White"
                        Margin="0,0,0,20"/>
            
            <!-- Role Section -->
            <TextBlock Text="Login as" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="UserRoleComboBox" 
                     SelectedItem="{Binding SelectedRole}"
                     Height="40"
                     FontSize="14"
                     Padding="10"
                     BorderThickness="2"
                     BorderBrush="#ddd"
                     Background="White"
                     Margin="0,0,0,20">
                <ComboBoxItem Content="Admin" Tag="Admin"/>
                <ComboBoxItem Content="Teacher" Tag="Teacher"/>
                <ComboBoxItem Content="Student" Tag="Student"/>
            </ComboBox>
            
            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessage" 
                      Text="{Binding ErrorMessage}"
                      Foreground="Red" 
                      FontSize="12" 
                      Margin="0,0,0,15"
                      TextWrapping="Wrap">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <!-- Login Button -->
            <Button Content="Sign In" 
                   Background="#3498db" 
                   Foreground="White" 
                   FontWeight="Bold"
                   FontSize="16"
                   Height="45"
                   Margin="0,0,0,20"
                   Click="LoginButton_Click"
                   IsDefault="True"/>
            
            <!-- Quick Login Section -->
            <Border BorderBrush="#eee" BorderThickness="0,1,0,0" Padding="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Quick Login Options" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" 
                               Content="Admin" 
                               Background="#e74c3c" 
                               Foreground="White" 
                               Height="35"
                               FontSize="12"
                               FontWeight="Bold"
                               Click="QuickLogin_Click" 
                               Tag="admin,admin123,Admin"
                               Margin="0,0,5,0"/>
                        
                        <Button Grid.Column="1" 
                               Content="Teacher" 
                               Background="#f39c12" 
                               Foreground="White" 
                               Height="35"
                               FontSize="12"
                               FontWeight="Bold"
                               Click="QuickLogin_Click" 
                               Tag="teacher,teach123,Teacher"
                               Margin="2.5,0"/>
                        
                        <Button Grid.Column="2" 
                               Content="Student" 
                               Background="#27ae60" 
                               Foreground="White" 
                               Height="35"
                               FontSize="12"
                               FontWeight="Bold"
                               Click="QuickLogin_Click" 
                               Tag="student,stud123,Student"
                               Margin="5,0,0,0"/>
                    </Grid>
                    <TextBlock Text="Click above for demo credentials" 
                              FontSize="10" 
                              Foreground="#999" 
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495e">
            <TextBlock Text="Â© 2024 Student Management System" 
                      FontSize="10" 
                      Foreground="#bdc3c7" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>