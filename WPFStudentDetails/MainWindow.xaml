<Window x:Class="WPFStudentDetails.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WPFStudentDetails.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModels:StudentViewModel/>
    </Window.DataContext>

    <Grid Margin="16">

        <ListView ItemsSource="{Binding Students}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" CornerRadius="8" Margin="4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Student Photo Icon -->
                            <Ellipse Grid.Column="0" Width="50" Height="50" Fill="#4CAF50" Margin="0,0,12,0" VerticalAlignment="Top">
                            </Ellipse>
                            <TextBlock Grid.Column="0" Text="👤" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            
                            <!-- Student Details -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <!-- Name - Large Font -->
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,4"/>
                                
                                <!-- ID, Age, Grade - Smaller Font -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="ID: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Id}" FontSize="12" Foreground="#B3B3B3" Margin="0,0,16,0"/>
                                    <TextBlock Text="Age: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Age}" FontSize="12" Foreground="#B3B3B3" Margin="0,0,16,0"/>
                                    <TextBlock Text="Grade: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Grade}" FontSize="12" Foreground="#B3B3B3"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
