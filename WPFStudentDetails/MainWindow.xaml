<Window x:Class="WPFStudentDetails.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WPFStudentDetails.ViewModels"
        mc:Ignorable="d"
        Title="Student Details System" Height="500" Width="900"
        Loaded="MainWindow_Loaded">

    <Window.DataContext>
        <viewModels:StudentViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with user info and logout -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Welcome," Foreground="White" FontSize="14" Margin="0,0,5,0"/>
                    <TextBlock x:Name="UserNameText" Foreground="#3498db" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="UserRoleText" Foreground="#ecf0f1" FontSize="12" Margin="10,0,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="Logout" 
                       Background="#e74c3c" 
                       Foreground="White" 
                       Padding="15,5" 
                       FontSize="12"
                       Click="LogoutButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="16">

        <ListView ItemsSource="{Binding Students}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#2B2B2B" BorderBrush="#3A3A3A" BorderThickness="1" CornerRadius="8" Margin="4" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Student Photo Icon -->
                            <Ellipse Grid.Column="0" Width="50" Height="50" Fill="#4CAF50" Margin="0,0,12,0" VerticalAlignment="Top">
                            </Ellipse>
                            <TextBlock Grid.Column="0" Text="👤" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            
                            <!-- Student Details -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <!-- Name - Large Font -->
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Foreground="#FFFFFF" Margin="0,0,0,4"/>
                                
                                <!-- ID, Age, Grade - Smaller Font -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="ID: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Id}" FontSize="12" Foreground="#B3B3B3" Margin="0,0,16,0"/>
                                    <TextBlock Text="Age: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Age}" FontSize="12" Foreground="#B3B3B3" Margin="0,0,16,0"/>
                                    <TextBlock Text="Grade: " FontSize="12" Foreground="#B3B3B3"/>
                                    <TextBlock Text="{Binding Grade}" FontSize="12" Foreground="#B3B3B3"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        </Grid>
    </Grid>
</Window>
